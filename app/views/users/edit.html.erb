<header>
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container">
      <a class="navbar-brand" href="/">
        <span>Bookers</span>
      </a>

      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation"></button>

      <div class="collapse navbar-collapse" id="navbarNavDropdown">
        <ul class="navbar-nav ml-auto">
          <li>
            <a class="fas fa-home nav-link text-light" href="/users/sign_in">Home</a>
          </li>
          <li>
            <a class="fas fa-link nav-link text-light" href="/users">Users</a>
          </li>
          <li>
            <a class="fas fa-user-plus nav-link text-light" href="/books">books</a>
          </li>
          <li>
            <a class="fas fa-sign-in-alt nav-link text-light">
              <%= link_to "logout", destroy_user_session_path, method: :delete %></a>
          </li>
        </ul>
      </div>
    </div>
  </nav>
</header>

<main>
  <%if flash.notice%>
    <p class="notice"><%= notice %></p>
  <%end%>
  <%if flash.alert%>
    <p class="alert"><%= alert %></p>
  <%end%>

  <div class="container">
    <div class="row">
      <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
        <h2>User info</h2>

        <%= form_with model: @user, local:true do |f| %>

        <div class="form-group">
        <h4>Name</h4>
        <%= f.text_field :name %>
        </div>

        <div class="form-group">
        <h4>Image</h4>
        <%= f.attachment_field :profile_image %>
        </div>

        <div class="form-group">
        <h4>Introduction</h4>
        <%= f.text_area :introduction %>
        </div>

        <div class="form-group">
        <%= f.submit 'Update User' %>
        </div>
      <% end %>
      </div>
    </div>
  </div>
</main>

<footer>
  <div class="container mt-5">
    <div class="row">
      <div class="mx-auto">
        <p>CopyRight Infratop.inc</p>
      </div>
    </div>
  </div>
</footer>