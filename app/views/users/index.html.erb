<main>

  <p id="notice"><%= notice %></p>

  <div class="container px-5 px-sm-0">
    <div class="row">
      <div class="col-md-3">
        <h2>User info</h2>

        <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %>

        <table class="table">
          <tbody>
            <tr></tr>
            <tr>
              <th>name</th>
              <th><%= @user.name %></th>
            </tr>

            <tr>
              <th>introduction</th>
              <th><%= @user.introduction %></th>
            </tr>
          </tbody>
        </table>

        <div class="row">
          <% if @book.user == current_user %>
            <%= link_to "", edit_user_path(current_user), class:"btn btn-outline-secondary btn-block fas fa-user-cog" %>
          <% else %>
            <%= link_to "", user_path(current_user), class:"btn btn-outline-secondary btn-block fas fa-user-cog" %>
          <% end %>
        </div>

        <h2 class="mt-3">New book</h2>

        <%= form_with model: @book, local: true do |f| %>

        <div class="form-group">
        <%= f.label :Title %><br>
        <%= f.text_field :title, autofocus: true %>
        </div>

        <div class="form-group">
        <%= f.label :Opinion %><br />
        <%= f.text_field :body, autofocus: true %>
        </div>

        <div class="form-group">
        <%= f.submit "Create Book",class:"btn btn-success" %>
        </div>
      </div>

      <div class="col-md-8 offset-md-1">
        <h2>Users</h2>

        <table class="table">
          <thead>
            <tr>
              <th>image</th>
              <th>name</th>
              <th colspan="3"></th>
            </tr>
          </thead>

          <tbody>
            <% @users.each do |user| %>
            <tr>
              <td><%= attachment_image_tag user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %></td>
              <td><%= user.name %></td>
              <td><%= link_to "Show", user_path(user) %></td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>

      <% end %>

    </div>
  </div>
</main>

<footer>
  <div class="container mt-5">
    <div class="row">
      <div class="mx-auto">
        <p>CopyRight Infratop.inc</p>
      </div>
    </div>
  </div>
</footer>