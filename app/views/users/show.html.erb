<header>
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container">
      <a class="navbar-brand" href="/">
        <span>Bookers</span>
      </a>

      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation"></button>

      <div class="collapse navbar-collapse" id="navbarNavDropdown">
        <ul class="navbar-nav ml-auto">
          <li>
            <a class="fas fa-home nav-link text-light" href="/">Home</a>
          </li>
          <li>
            <a class="fas fa-link nav-link text-light" href="/">Users</a>
          </li>
          <li>
            <a class="fas fa-user-plus nav-link text-light" href="/books">books</a>
          </li>
          <li>
            <a class="fas fa-sign-in-alt nav-link text-light" href="/">
              <%= link_to "logout", destroy_user_session_path, method: :delete %></a>
          </li>
        </ul>
      </div>
    </div>
  </nav>
</header>

<main>
  <p id="notice"></p>
  <div class="container px-5 px-sm0">
    <div class="row">
      <div class="col-md-3">
        <h2>User info</h2>

        <table class="table">

        </table>

        <div class="row">
          <a class="btn btn-outline-secondary btn-block fas fa-user-cog" href="/user"></a>
        </div>

        <h2 class="mt-3">New book</h2>

        <%= form_with model: @book, url: user_registration_path, id: 'new_book', class: 'new_book', local: true do |f| %>

        <div class="field">
        <%= f.label :title %><br>
        <%= f.text_field :title, autofocus: true %>
        </div>

        <div class="field">
        <%= f.label :body %><br />
        <%= f.email_field :body, autofocus: true, autocomplete: "email" %>
        </div>

        <div class="actions">
        <%= f.submit "Create Book" %>
        </div>

        <div class="col-md-8 offset-md-1">
          <h2>Books</h2>
          <table class="table table-hover table-inverse">
          </table>
        </div>

        <% end %>

      </div>
    </div>
  </div>
</main>