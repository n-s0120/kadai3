<header>
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container">
      <a class="navbar-brand" href="/">
        <span>Bookers</span>
      </a>

      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation"></button>

      <div class="collapse navbar-collapse" id="navbarNavDropdown">
        <ul class="navbar-nav ml-auto">
          <li>
            <a class="fas fa-home nav-link text-light" href="/users/sign_in">Home</a>
          </li>
          <li>
            <a class="fas fa-users nav-link text-light" href="/users">Users</a>
          </li>
          <li>
            <a class="fas fa-book-open nav-link text-light" href="/books">books</a>
          </li>
          <li>
            <a class="fas fa-sign-out-alt nav-link text-light" rel="nofollow" data-method="delete" href="/users/sign_out">logout</a>
          </li>
        </ul>
      </div>
    </div>
  </nav>
</header>

<main>
  <p id="notice"></p>
  <div class="container px-5 px-sm0">
    <div class="row">
      <div class="col-md-3">
        <h2>User info</h2>

        <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %>

        <table class="table">

          <h4>name</h4>
          <p><%= @user.name %></p>

          <h4>introduction</h4>
          <p><%= @user.introduction %></p>

        </table>

        <div class="row">
          <%= link_to "", edit_user_path, class:"btn btn-outline-secondary btn-block fas fa-user-cog" %>
        </div>

        <h2 class="mt-3">New book</h2>

        <%= form_with model: @book, local: true do |f| %>

        <div class="form-group">
        <%= f.label :Title %><br>
        <%= f.text_field :title, autofocus: true %>
        </div>

        <div class="form-group">
        <%= f.label :Opinion %><br />
        <%= f.text_field :body, autofocus: true %>
        </div>

        <div class="form-group">
        <%= f.submit "Create Book" %>
        </div>
      </div>

      <div class="col-md-8 offset-md-1">
        <h2>Book detail</h2>
        <table class="table table-hover table-inverse">
          <thead>
            <tr>
               <td>
                <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %>
               </td>

               <td>
                <%= @book2.title %>
               </td>

               <td>
                <%= @book2.body %>
               </td>

               <td>
                 <%= link_to "Edit", edit_book_path(@user), class:"btn btn-sm btn-success btn-block" %>
               </td>

               <td>
                 <%= link_to "Destroy", class:"btn btn-sm btn-danger", method: :delete %>
               </td>

            </tr>
          </thead>
          <tbody></tbody>
        </table>
      </div>

      <% end %>

    </div>
  </div>
</main>